{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "scripts": {
        "serve:dev": "npm run build && node dist/server.js",
        "serve:prod": "npm run build && NODE_ENV=production node dist/server.js",
        "build": "tsc && npm run lint",
        "test": "jest --forceExit --coverage --verbose",
        "lint": "eslint \"**/*.{js,ts}\""
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-validator": "^6.2.0",
        "mongoose": "^5.7.8",
        "socket.io": "^2.3.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/dotenv": "^6.1.1",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/mongoose": "^5.5.30",
        "@types/node": "^12.7.8",
        "@types/socket.io": "^2.1.4",
        "@types/supertest": "^2.0.8",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "acorn": "^7.1.0",
        "chai": "^4.2.0",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0"
    }
}
